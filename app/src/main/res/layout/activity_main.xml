<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.a7ifun.com.a7ifun.MainActivity">
    <!--标题栏-->
    <include layout="@layout/titlebar"></include>
    <!--FragmentLayout-->
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>
    <!--底部栏-->
    <RadioGroup
        android:id="@+id/rg_main"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:background="#11000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/bnt1"
        android:text="音乐"
        android:drawableTop="@drawable/rb_btn1_selector"
        style="@style/btn_tag_style"
        />
    <RadioButton
        android:id="@+id/bnt2"
        android:text="购物车"
        android:drawableTop="@drawable/rb_btn2_selector"
        style="@style/btn_tag_style"
        />
    <RadioButton
        android:id="@+id/bnt3"
        android:text="行程"
        android:drawableTop="@drawable/rb_btn3_selector"
        style="@style/btn_tag_style"
        />
    <RadioButton
        android:id="@+id/bnt4"
        android:text="7ifun"
        android:drawableTop="@drawable/rb_btn4_selector"
        style="@style/btn_tag_style"
        />
    </RadioGroup>
</LinearLayout>
